# Base configuration file - values here are overridden by environment-specific files
# Copy this to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=tacoshare_delivery
DB_SSLMODE=disable

# Database URL for migrations (required by golang-migrate)
DATABASE_URL=postgres://postgres:your_password_here@localhost:5432/tacoshare_delivery?sslmode=disable

# Twilio Configuration (SMS OTP)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_API_KEY=your_api_key
TWILIO_API_SECRET=your_api_secret
TWILIO_FROM_PHONE_NUMBER=+1234567890

# Firebase Cloud Messaging (FCM) Configuration
# For local development, use file path:
FCM_CREDENTIALS_PATH=config/firebase-service-account.json
# For Cloud Run, use JSON credentials (set in Secret Manager):
# FCM_CREDENTIALS_JSON={"type":"service_account",...}

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=2160h

# Security Configuration
OTP_PEPPER=your_otp_pepper_secret_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_for_pii_minimum_32_characters

# Server Configuration
PORT=8080
ENV=production
BASE_URL=https://api.com

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=delivery
R2_PUBLIC_URL=https://your-bucket.r2.dev

# En tu .env o terminal
ASSIGNMENT_RADIUS_KM=2.0        # Radio fijo de b√∫squeda (default: 2km)
ASSIGNMENT_TIMEOUT_SECONDS=10   # Timeout por conductor (default: 10s)

# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=-------
